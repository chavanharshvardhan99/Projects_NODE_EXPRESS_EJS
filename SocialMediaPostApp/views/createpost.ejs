<body>

    <h1>Posts</h1>

    <div id="form">
        <i class="fa-brands fa-twitter"></i>
        <h1>Create Post</h1>
        <form action="/createpost" method="post">
            <div>
                <input type="text" name="user" id="user" placeholder="Enter Your First Name">
            </div><br>
            <div>
                <textarea name="postContent" id="postContent" cols="100" rows="10"
                    placeholder="Enter Your Post Text"></textarea>
            </div><br>
            <button>New_Post</button>
        </form>
    </div>

